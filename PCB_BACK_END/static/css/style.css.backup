/* ========== GLOBAL VARIABLES & RESET ========== */
:root {
    --primary-bg: #107a00;
    --dark-green: #004d1b83;
    --text-color: #000;
    --text-white: #fff;
    --button-color: #c0c0c0;
    /* Silver */
    --button-hover: #d9d9d9;
    --accent: #00ff66;
    --card-bg: rgba(255, 255, 255, 0.2);
    --glass-bg: rgba(192, 192, 192, 0.6);
    --error: #c62828;
    --success: #0b8f3a;
}

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    min-height: 100vh;
    font-family: "Times New Roman", serif;
    /* Unified Font */
    color: var(--text-color);
    /* Fallback background if GIF fails */
    background: linear-gradient(135deg, var(--dark-green), var(--primary-bg));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* Centers content vertically */
}

.page-title {
    font-size: clamp(42px, 4vw, 56px);
    font-weight: 700;
    margin: 10px 0 25px;
    color: #000;
    text-align: center;
}

/* Background Video/GIF Classes */
.bg-video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
}

/* Responsive Images */
img,
video,
canvas {
    max-width: 100%;
    height: auto;
}

/* ========== BUTTONS (Unified Style) ========== */
button,
.btn,
.primary-btn,
.check-btn,
.back-btn,
.next-btn,
.ok-btn {
    border: none;
    border-radius: 10px;
    padding: 12px 24px;
    font-weight: 700;
    cursor: pointer;
    transition: transform 0.2s ease, background 0.2s ease;
    font-family: inherit;
    background: var(--button-color);
    color: #000;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

button:hover,
.btn:hover {
    background: var(--button-hover);
    transform: scale(1.05);
}

button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

/* ========== LOGIN PAGES (Admin & User) ========== */
.login-body {
    /* Specific alignment for login pages */
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
}

.login-box {
    background: rgba(0, 0, 0, 0.65);
    /* Darker for better text readability */
    backdrop-filter: blur(12px);
    border-radius: 20px;
    padding: 40px;
    text-align: center;
    width: 90%;
    max-width: 380px;
    /* Responsive fix */
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
    color: white;
}

.login-box input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border-radius: 8px;
    font-size: clamp(16px, 3vw, 22px);
    /* Decreased font size for smaller text boxes */
}

.login-box button {
    padding: 14px 40px;
    font-size: 18px;
    margin-top: 15px;
    min-width: 140px;
    /* Larger button size */
}

/* ========== DASHBOARD (Second Page) ========== */
.container {
    width: 95%;
    max-width: 800px;
    background: #1a1a1a;
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
    color: white;
    margin: 20px 0;
}

.row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 10px;
    margin-bottom: 12px;
    color: #000;
}

.fault-box {
    background: rgba(255, 75, 43, 0.15);
    border-left: 4px solid #ff4b2b;
    border-radius: 10px;
    padding: 16px;
    margin-bottom: 20px;
    display: none;
    /* Hidden by default */
}

/* ========== CAMERA & UPLOAD (Third Page) ========== */
.selection-section,
.camera-section,
.upload-section,
.result-section {
    width: 95%;
    max-width: 720px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    padding: 24px;
    display: flex;
    text-align: center;
}

.table-header {
    background: #e8f5e9;
    font-weight: bold;
    border-bottom: 2px solid #b2dfdb;
}

.table-card {
    width: 95%;
    max-width: 960px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 20px;
    color: #000;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.table-card .table-header,
.table-card .row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    align-items: center;
    text-align: center;
    gap: 10px;
}

.table-scroll {
    max-height: 360px;
    overflow-y: auto;
    width: 100%;
}

.status-ok {
    color: var(--success);
    font-weight: bold;
}

.status-not {
    color: var(--error);
    font-weight: bold;
}

/* ========== SIDEBAR (Common) ========== */
.side-panel {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 300px;
    background: #fff;
    color: #000;
    box-shadow: 4px 0 20px rgba(0, 0, 0, 0.3);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    color: #000;
    font-weight: bold;
}

.btn-container {
    display: flex;
    gap: 40px;
    justify-content: center;
    align-items: center;
}

/* Mode box buttons - LARGER SIZE */
.mode-box .btn {
    padding: 18px 48px;
    font-size: 20px;
    min-width: 120px;
}

/* ========== SECTION STYLES ========== */
.section {
    width: 98%;
    max-width: 1200px;
    background: var(--glass-bg);
    padding: 35px 50px;
    border-radius: 16px;
    margin: 20px 0;
    text-align: left;
    color: #000;
    font-size: 18px;
}

.section h3 {
    text-align: center;
    font-size: 28px;
    margin-bottom: 15px;
}

.section p {
    text-align: justify;
    font-size: 18px;
    line-height: 1.6;
}

.menu-panel {
    position: fixed;
    top: 60px;
    left: 20px;
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    display: none;
    flex-direction: column;
    gap: 10px;
    z-index: 1000;
}

.menu-panel.show {
    display: flex;
}

.menu-panel a {
    text-decoration: none;
    color: #000;
    font-weight: bold;
}

.hamburger {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1001;
    background: transparent;
    box-shadow: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.hamburger span {
    display: block;
    width: 30px;
    height: 3px;
    background: #000;
    border-radius: 2px;
}

.menu-icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
}

.intro {
    text-align: center;
    margin-bottom: 20px;
    font-size: 1.2rem;
    color: #ccc;
}

.checkbox-group {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 30px;
}

.btn-row {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
}

.tech-field {
    margin-bottom: 15px;
    text-align: center;
    width: 100%;
}

.tech-field div:first-child {
    font-weight: bold;
    margin-bottom: 5px;
}

.selection-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
}

.button-bar {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 15px;
}

.status {
    margin-top: 15px;
    font-weight: bold;
    color: var(--accent);
}

.detection-list {
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    padding: 15px;
    border-radius: 10px;
    margin-top: 15px;
}

.detection-item {
    margin-bottom: 5px;
}

.result-actions {
    margin-top: 20px;
}

.notes {
    width: 95%;
    max-width: 960px;
    background: rgba(255, 255, 255, 0.9);
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 20px;
    color: #000;
}

.note-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
}

.note-item {
    background: #f0f0f0;
    padding: 15px;
    border-radius: 8px;
}

.note-title {
    font-weight: bold;
    margin-bottom: 5px;
}

.image-bar {
    width: 95%;
    max-width: 960px;
    height: 420px;
    border-radius: 16px;
    border: 4px dotted rgba(0, 0, 0, 0.35);
    background: rgba(255, 255, 255, 0.75);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 24px;
    position: relative;
}

.image-bar img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.footer {
    margin-top: 20px;
    text-align: center;
}